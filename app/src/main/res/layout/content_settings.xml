<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/app_padding"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/changeInstantInfoButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_button_height"
            android:background="@color/colorPrimary"
            android:text="Изменить Информацию о себе"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/changeScheduleButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_button_height"
            android:background="@color/colorPrimary"
            android:text="Изменить расписание"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/clearScheduleButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_button_height"
            android:background="@color/orange"
            android:text="Удалить расписание"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/clearDataButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_button_height"
            android:background="@color/orange"
            android:text="Удалить все данные"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/removeAccountButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_button_height"
            android:background="@color/redItem"
            android:text="Удалить аккаунт"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_button_height"
            android:background="@color/redItem"
            android:text="Выйти из аккаунта"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>
</LinearLayout>