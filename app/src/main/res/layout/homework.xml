<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homework"
    style="@style/RootLayoutStyle"
    android:layout_width="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="@style/ItemCardStyle"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            style="@style/ItemContainerStyle"
            android:background="@color/selectedItem"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                style="@style/ItemSubjectStyle"
                android:text="Методы маш обучения" />

            <TextView
                android:id="@+id/textView2"
                style="@style/ItemTextStyle"
                android:text="Лабораторная 7"
                app:layout_constraintStart_toStartOf="@id/textView"
                app:layout_constraintTop_toBottomOf="@id/textView" />

            <CheckBox
                android:id="@+id/checkBox"
                style="@style/ItemCheckBoxStyle" />

            <TextView
                android:id="@+id/textView7"
                style="@style/ItemTextStyle"
                android:text="7 недель"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        style="@style/ItemCardStyle"
        app:layout_constraintTop_toBottomOf="@id/cardView">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            style="@style/ItemContainerStyle"
            android:fadingEdge="horizontal|vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout">

            <TextView
                android:id="@+id/textView3"
                style="@style/ItemSubjectStyle"
                android:text="Методы маш обучения" />

            <TextView
                android:id="@+id/textView4"
                style="@style/ItemTextStyle"
                android:text="Лабораторная 7"
                app:layout_constraintStart_toStartOf="@id/textView3"
                app:layout_constraintTop_toBottomOf="@id/textView3" />

            <CheckBox
                android:id="@+id/checkBox2"
                style="@style/ItemCheckBoxStyle" />

            <TextView
                android:id="@+id/textView8"
                style="@style/ItemTextStyle"
                android:text="7 недель"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        style="@style/ItemCardStyle"
        app:layout_constraintTop_toBottomOf="@id/cardView2">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout3"
            style="@style/ItemContainerStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout2">

            <TextView
                android:id="@+id/textView5"
                style="@style/ItemSubjectStyle"
                android:text="Моделирование" />

            <TextView
                android:id="@+id/textView6"
                style="@style/ItemTextStyle"
                android:text="Лабораторная 7"
                app:layout_constraintStart_toStartOf="@id/textView5"
                app:layout_constraintTop_toBottomOf="@id/textView5" />

            <CheckBox
                android:id="@+id/checkBox3"
                style="@style/ItemCheckBoxStyle" />

            <TextView
                android:id="@+id/textView9"
                style="@style/ItemTextStyle"
                android:text="7 недель"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
