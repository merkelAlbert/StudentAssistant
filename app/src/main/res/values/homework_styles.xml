<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeworkContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CardTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardSubjectStyle" parent="CardTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardTimeStyle">
        <item name="android:layout_width">33dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:background">@drawable/card_time_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">3dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CardWeekStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
